<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:text="LifeCycle"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Khu vực hiển thị kết quả -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:background="#ccc">

       <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/black"
            android:textSize="75sp"
            android:text="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Khu vực chứa bàn phím -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keys_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Hàng 1: -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCE"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:layout_width="0dp"
            android:text="CE"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="#ccc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnC"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="C"
            android:background="#ccc"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCE"
            app:layout_constraintEnd_toStartOf="@id/btnBS"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBS"
            android:textSize="20sp"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="BS"
            android:background="#ccc"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnC"
            app:layout_constraintEnd_toStartOf="@id/btnDev"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDev"
            android:layout_width="0dp"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="/"
            android:background="#ccc"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btnBS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />


        <!-- Hàng 2-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCE"
            app:layout_constraintEnd_toStartOf="@id/btn8"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:background="#ddd"

            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="8"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintEnd_toStartOf="@id/btn9"
            app:layout_constraintTop_toBottomOf="@id/btnC"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:background="#ddd"

            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="9"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintEnd_toStartOf="@id/btnX"
            app:layout_constraintTop_toBottomOf="@id/btnBS"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnX"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:background="#ccc"

            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="x"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnDev" />



        <!-- Hàng 3-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="5"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintEnd_toStartOf="@id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btn8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="6"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintEnd_toStartOf="@id/btnMinus"
            app:layout_constraintTop_toBottomOf="@id/btn9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:background="#ccc"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="-"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnX" />




         <!-- Hàng 4-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintEnd_toStartOf="@id/btn2"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="2"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintEnd_toStartOf="@id/btn3"
            app:layout_constraintTop_toBottomOf="@id/btn5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="3"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintEnd_toStartOf="@id/btnPlus"
            app:layout_constraintTop_toBottomOf="@id/btn6"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:background="#ccc"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="+"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnMinus" />

    <!-- Hàng cuối-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpposite"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="+/-"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintEnd_toStartOf="@id/btn0"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="0"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btnOpposite"
            app:layout_constraintEnd_toStartOf="@id/btnPoint"
            app:layout_constraintTop_toBottomOf="@id/btn2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPoint"
            android:layout_width="0dp"
            android:background="#ddd"
            android:textSize="20sp"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="."
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btn0"
            app:layout_constraintEnd_toStartOf="@id/btnEqual"
            app:layout_constraintTop_toBottomOf="@id/btn3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:background="#ccc"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintWidth_percent="0.22"
            android:text="="
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/btnPoint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPlus" />

        

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>